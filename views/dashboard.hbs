<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
  <link rel="stylesheet" href="../static/styleDash.css">

    <title>Dashboard</title>
  </head>
  <body>
    <nav class="navbar navbar-light bg-light">
  <a class="navbar-brand col px-md-5">Welcome {{userName}}</a>
  <form  action="/logout" method="post" class="form-inline">
    <button class="btn btn-outline-success" type="submit">LOG OUT</button>
  </form>
</nav>


    <div class="container">
  
      <div class="tbalance">
        <h4>Total Balance</h4>
        <h4 class="font-weight-bolder">₹{{totalBal}}</h4>
      </div>
   
    <div class="income-expense">

      <table style="width:100%">
  <tr>
    <th class="income text-success fs-4">Income</th>
    <th class="expense text-danger fs-4">Expense</th>
  </tr>
  <tr>
    <td class="income fs-4">₹{{Incomesum}}</td>
    <td class="expense fs-4">₹{{Expensesum}}</td>
  </tr>

</table>
    </div>

    <div class="transcation-history">
      <h3>Transcation History</h3>
    <table class="table table-striped" style="width:100%">
      <tr>
    <th >name</th>
    <th>money</th>
    <th>Income/Expense</th>
    <th>Action</th>
  

   {{#each duserRecord}}
<tr>
      <td>{{this.purposeuser}}</td>
      <td>₹{{this.addmoney}}</td>
      <td>{{this.incexp}}</td>
      <td><form action="/dashboard/del" method="post"><button type="submit" name="deleteID" value="{{this.id}}"
       class="btn btn-danger">Delete</button></form></td>
    </tr>
    {{/each}}



  </table>
  
    </div>
  
    <div class="newtranscation">
      <h3>Add new Transcation</h3>
     <form method="post" action="/dashboard/add">
     <div class="logged">
       <input type="hidden" id="loggeduser" name="loggeduser" value="{{userName}}">
     </div>
    
       <label for="name" id="newnamel">Name</label>
      <input type="text" id="newname" name="purposeuser" class="form-control"><br>

      <label for="amount" id="newamountl">Amount</label>
      <input type="number" id="newamount" class="form-control" name="addmoney" min="1" max="999999999999999999999"><br>

      <button type="submit" name="incexp" value="Income" class="btn btn-success">Add Income</button>
      <button type="submit" name="incexp" value="Expense" class="btn btn-danger"> Add Expense</button>
      

    </form>
</div>
   </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>

   
  </body>
</html>