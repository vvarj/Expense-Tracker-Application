<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register Your Account</title>
    <link rel="stylesheet" href="../static/styleRegister.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
  </head>
  <body>

    <div class="main-box">
      <div class="container-left">
        Welcome to Expense Tracker Application<br />
        <div class="text"><p>Register your Account and Keep Tracking your Money</p></div>
      </div>

      <div class="container-right">
        <div class="formdata">
          <form action="#" method="post">
            <h1>Register</h1>
            <div class="textBox">
              <input
                type="text"
                name="username"
                id="username"
                placeholder="username"
              /><br />
            </div>
            <div class="textBox">
              <input
                type="password"
                name="password"
                id="password"
                placeholder="password"
              />
            </div>

            <button class="btn btn-primary" type="submit">Register</button>

            {{#if regErr}}
              <p style="color: red;">User Already Exits !! Please enter a
                different user ID</p>
            {{/if}}

            {{#if regSuc}}
              <p style="color:green">Registered Successfully</p>
            {{/if}}

            <a href="/">Go back to Login</a>
          </form>
        </div>
      </div>

    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    >
    </script>

  </body>
</html>